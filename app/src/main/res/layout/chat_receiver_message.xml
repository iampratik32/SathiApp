<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="7dp"
        android:layout_marginRight="40dp"
        android:id="@+id/relativeLayout_chat"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_weight="0.50"
                    android:src="@drawable/temp_image"
                    android:id="@+id/chatReceiver_profileImage"></de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/chat_message"
                    android:textSize="13dp"
                    android:padding="15dp"
                    android:textColor="@color/materialBlack"
                    android:background="@drawable/chat_sender_layout"
                    android:text="asdasd"></TextView>

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:layout_gravity="left"
                    android:id="@+id/chat_sendingImage"
                    android:src="@drawable/ic_image_black_24dp"
                    android:scaleType="centerCrop"></ImageView>

                <ProgressBar
                    android:id="@+id/progressBar_forChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textSeenMessage"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:text="Seen"
                    android:textColor="@color/materialBlack"></TextView>

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chatTime_chatLayout"
                android:layout_marginTop="2dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:layout_gravity="right"
                android:id="@+id/userImage_chatLayout"></TextView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>